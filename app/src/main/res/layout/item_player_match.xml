<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linear_local"
        android:layout_weight="2"
        android:weightSum="2"
        android:layout_width="0dp"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/image_add"
            android:layout_weight="1"
            android:src="@drawable/add_green"
            android:layout_width="0dp"
            android:layout_height="50dp" />
        <ImageView
            android:id="@+id/image_remove"
            android:layout_weight="1"
            android:src="@drawable/remove_red"
            android:layout_width="0dp"
            android:layout_height="50dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/text_name"
        android:textColor="#5656DE"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_weight="5"
        android:text="PLAYER NAME"
        android:layout_width="0dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:id="@+id/linear_visitor"
        android:layout_weight="2"
        android:weightSum="2"
        android:layout_width="0dp"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/image_remove_visitor"
            android:layout_weight="1"
            android:src="@drawable/remove_red"
            android:layout_width="0dp"
            android:layout_height="50dp" />
        <ImageView
            android:id="@+id/image_add_visitor"
            android:layout_weight="1"
            android:src="@drawable/add_green"
            android:layout_width="0dp"
            android:layout_height="50dp" />

    </LinearLayout>

</LinearLayout>